!!! XML
- root = root_url.sub(/\/$/, '')
- id_prefix = "tag:#{request.host},2011:"
%feed( xmlns="http://www.w3.org/2005/Atom" xml:lang="ru" )
  %title= story['title']
  %link( rel="self" href="#{root}/posts.atom" type="application/atom+xml" )/
  %link( href="#{root}/" type="text/html" )/
  %updated= @posts.last.updated_at.xmlschema
  %author
    %name= Digest::SHA1.hexdigest "Андрей Ситник"
  %id= id_prefix + '/posts.atom'
  - @posts.reverse_each do |post|
    %entry
      %title= post.title
      %link( href="#{root + post.url}" )/
      %updated= post.updated_at.xmlschema
      %id= id_prefix + post.url
      %content( type="xhtml"  )
        %div( xmlns="http://www.w3.org/1999/xhtml" )
          = post.html
