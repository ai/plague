- title @post.title, @post.story_title

.post-page
  = render 'top-menu'
  .paper
    - if @post.date
      .date-badge
        .year
          .hightlight( role="hightlight-year" )
          .text= @post.date.year
        .date
          .month= R18n.l @post.date, '%b'
          .day= @post.date.mday
        .crop
          .left-corner
          .right-corner
    = @post.html

  - if @post.next
    .next-post
      %a( href="#{@post.next.url}" )
        .border
        .arrow ↓
        .text
          Следующая запись
  - else
    .to-be-continue Продолжение следует
