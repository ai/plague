.title-page.page
  .book
    .book-wrap
      .bottom
      - (1..12).to_a.reverse_each do |i|
        .page( class="page#{i} #{(i % 2).zero? ? 'even' : 'odd'}" )
      .back-side
        .paper
      .title
        .head
        = @title.html
      %a.open-badge.new( href="/" role="start-reading" )
        .border.no-right
        .gradient
        .crop-shadow
          .shadow
        .crop-arrow
          .arrow
            .border
